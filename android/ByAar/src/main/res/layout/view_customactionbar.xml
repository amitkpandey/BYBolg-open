<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/action_root">
    <LinearLayout
        android:id="@+id/actionbar_left_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/action_bar_back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:src="@drawable/commonactionbar_back"
            android:layout_gravity="center"
            android:visibility="visible"/>
        <TextView

            android:id="@+id/action_left_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:maxLines="1"
            android:lines="1"
            android:ellipsize="marquee"
            android:selectAllOnFocus="true"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/actionbar_center_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/action_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="19sp"
            android:layout_gravity="center"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:lines="1"
            android:ellipsize="marquee"
            android:visibility="gone"

            />
        <ImageView
            android:id="@+id/action_bar_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/actionbar_right_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_alignParentRight="true">
        <ImageView
            android:id="@+id/action_right_imageView"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:src="@drawable/share_button"
            android:layout_gravity="center"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/action_right_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:visibility="gone"
            />

    </LinearLayout>


</RelativeLayout>
